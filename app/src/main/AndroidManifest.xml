<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.charityapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/red_divide_icon"
        android:label="Charity App"
        android:roundIcon="@mipmap/red_divide_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Payment"></activity>
        <activity android:name=".GuestEventDetails" />
        <activity android:name=".VolunteerEventDetails" />
        <activity android:name=".DonorEventDetails" />
        <activity
            android:name=".AdminEventDetails"
            android:label="Details"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".MakeEventActivity" />
        <activity android:name=".DonorActivity" />
        <activity android:name=".VolunteerActivty" />
        <activity android:name=".GuestHomeActivty" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".RegActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".MainActivity"/>
        <activity android:name=".splash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
